<div class="students-table">
  <table align="center" width="100%" cellpadding="1" cellspacing="1">
    <tr class="tr-head">
      <td>
        <%=t('app.views.student._students_by_course.id')%>
      </td>
      <td>
        <%=t('app.views.student._students_by_course.name')%>
      </td>
      <td>
        <%=t('app.views.student._students_by_course.adm_no')%>
      </td>
      <td>
        
      </td>
    </tr>
    <tr>
      <td>

      </td>
      <td>

      </td>
      <td>
        
      </td>
      <td>

      </td>
    </tr>
    
    <% @students.each_with_index do |r, i| %>
      <tr class="tr-<%= cycle('odd', 'even') %>">
        <td class="col-1">
          <%= i+1 %>
        </td>

        <td class="col-2">
          <%= r.first_name + " " + r.last_name %>
        </td>
        
        <td class="col-3">
          <%= r.admission_no %>
        </td>

        <td class="col-4">
          <%= link_to t('app.views.student._students_by_course.view_profile'), :controller => "student", :action => "profile", :id => r.id %>
	  <% unless r.user -%>
	      |
            <%= link_to t('app.views.student._students_by_course.generate_user'), :action => "generate_user_account", :id => r.id %>
	  <% end -%>
        </td>
      </tr>
    <% end %>
  </table>
</div>

